---
const CIRCLES_COUNT = 7;
const { class: className } = Astro.props;
---
<svg class={"inline " + className} viewBox="-12 -12 24 24">
    {
        Array.from({ length: CIRCLES_COUNT }).map((_, i) => {
            const theta = 2 * Math.PI * i / CIRCLES_COUNT + Math.PI / 12;
            const r = 6;
            const cx = (r - 1.2) * Math.cos(theta);
            const cy = (r - 1.2) * Math.sin(theta);

            return <circle cx={cx} cy={cy} r={r} class="fill-logo-200/40"></circle>
        })
    }
    <text x="-5" y="6" class="fill-white font-bold" style="font-size: 1rem;">R</text>
</svg>