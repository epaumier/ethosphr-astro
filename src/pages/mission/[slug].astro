---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { getCollection, getEntry } from "astro:content";
import { getLangFromUrl } from "i18n/utils";

export async function getStaticPaths() {

  const missions = await getCollection("missions", ({ data }) => {
    return data.publishDate < new Date();
  });

  return missions.map(({ slug, data: {title, publishDate: publishedAt, species, year } }) => ({
    params: { slug: slug },
    props: { title, publishedAt, species, year },
  }));
}

const lang = getLangFromUrl(Astro.url);

const { title, publishedAt, species, year } = Astro.props;
const Body = await (await getEntry("missions", Astro.params.slug)).render();
---

<Layout title={title}>
  <Container>
    <div class="mx-auto max-w-[735px] mt-14">
      <h1
        class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-1 lg:leading-tight">
        {title}
      </h1>
      <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap">
        <span class="text-gray-400">
          {species}
        </span>
        <span class="text-gray-400">•</span>
        <div class="text-gray-400">
          {year}
      </div>
      </div>
    </div>

    <div class="mx-auto prose prose-lg mt-6">
      <Body.Content />
    </div>
    <div class="text-center mt-8">
      <a
        href=`/${lang}/missions`
        class="bg-gray-100 px-5 py-3 rounded-md hover:bg-gray-200 transition"
        >← Back to our Actions</a
      >
    </div>
  </Container>
</Layout>
